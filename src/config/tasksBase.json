{
  "_meta": { "description": "Base definitions for all tasks" },

  "phonation": {
    "type": "voice",
    "recording": { "mode": "delayedStop", "maxDuration": 5 },
    "params": {
      "phoneme": { "default": "a", "values": ["a", "e", "i", "o", "u"] },
      "repeat": { "default": 1 },
      "maxDuration": { "default": 5 }
    }
  },

  "syllableRepeating": {
    "type": "voice",
    "recording": { "mode": "countDown", "maxDuration": 5 },
    "params": {
      "syllable": { "default": "pataka", "values": ["pataka", "ta", "ka"] },
      "repeat": { "default": 1 },
      "maxDuration": { "default": 5 }
    }
  },

  "retelling": {
    "type": "voice",
    "recording": { "mode": "basicStop" },
    "params": {
      "fairytale": { "default": "snowWhite", "values": ["snowWhite", "hanselAndGretel"] }
    }
  }
}
